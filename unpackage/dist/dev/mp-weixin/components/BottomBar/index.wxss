.bottom{
	width: 100%;
	height: 90rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	position: absolute;
	bottom: 0;
	padding: 0 20rpx;
	border-top: 1px solid #ededed;
}
.bottom .bottom-left{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 20rpx;
}
.bottom-left image{
	width: 70rpx;
	height: 70rpx;
	margin-right: 20rpx;
}
.bottom-left .audio-info{
	width: 300rpx;
}
.audio-name{
	font-size: 15px;
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.audio-singer{
	font-size: 11px;
	color: #7d7d7d;
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.bottom .bottom-right{
	font-size: 26px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.bottom-right .btn-player, .btn-info{
	width: 26px;
	margin-right: 20rpx;
}

