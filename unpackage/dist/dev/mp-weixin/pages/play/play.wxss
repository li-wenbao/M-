@-webkit-keyframes changeright {
0% {
		-webkit-transform: rotate(0deg);
}
50% {
		-webkit-transform: rotate(180deg);
}
100% {
		-webkit-transform: rotate(360deg);
}
}
.imgrotate_common {
	-webkit-animation: changeright 6s linear infinite;
}

